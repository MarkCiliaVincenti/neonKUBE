<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <OutputType>Library</OutputType>
        <RootNamespace>Neon.Kube.Clients</RootNamespace>
        <Authors>neonFORGE Team</Authors>
        <Version>10000.0.2236-dev-master</Version>
        <Company>neonFORGE LLC</Company>
        <Product>neonKUBE</Product>
        <Description>INTERNAL USE ONLY: Service clients used by neonKUBE related projects.</Description>
        <PackageReleaseNotes>https://github.com/nforgeio/neonKUBE/releases</PackageReleaseNotes>
        <Copyright>Copyright Â© 2005-2022 by neonFORGE LLC.  All rights reserved.</Copyright>
        <AssemblyVersion>0.0.0.0</AssemblyVersion>
        <FileVersion>0.0.0.0</FileVersion>
        <LangVersion>latest</LangVersion>
        <IsPackable>true</IsPackable>
        <PackageLicenseUrl></PackageLicenseUrl>
        <PackageProjectUrl>https://github.com/nforgeio/neonKUBE/blob/master/Lib/Neon.Kube.Clients/README.md</PackageProjectUrl>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/nforgeio/neonKUBE</RepositoryUrl>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <Configurations>Debug;Release</Configurations>
        <PackageIcon>nuget-icon.png</PackageIcon>
        <PackageTags>kubernetes</PackageTags>
        <NoDefaultExcludes>true</NoDefaultExcludes>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <GenerateTargetFrameworkAttribute>true</GenerateTargetFrameworkAttribute>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <AnalysisLevel>5.0</AnalysisLevel>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Neon.Common" Version="10000.0.2245-dev-master" />
        <PackageReference Include="Neon.Cryptography" Version="10000.0.2245-dev-master" />
        <PackageReference Include="Neon.Deployment" Version="10000.0.2245-dev-master" />
        <PackageReference Include="Neon.JsonConverters" Version="10000.0.2245-dev-master" />
        <PackageReference Include="Neon.ModelGenerator" Version="10000.0.2245-dev-master" GeneratePathProperty="true">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    </ItemGroup>

    <Target Name="ModelGen" BeforeTargets="CoreCompile">
        <!--- Generate the model source files -->
        <Message Importance="high" Text="&quot;$(PkgNeon_ModelGenerator)\contentFiles\any\netstandard2.0\win-x64\neon-modelgen&quot; --targets=all --target-namespace=Neon.Kube &quot;$(NK_ROOT)\Lib\Neon.Kube.Models\bin\$(Configuration)\net6.0\Neon.Kube.Models.dll&quot; &quot;$(ProjectDir)GeneratedEntities.mg.cs&quot;" />
        <Exec Command="&quot;$(PkgNeon_ModelGenerator)\contentFiles\any\netstandard2.0\win-x64\neon-modelgen&quot; --targets=all --target-namespace=Neon.Kube &quot;$(NK_ROOT)\Lib\Neon.Kube.Models\bin\$(Configuration)\net6.0\Neon.Kube.Models.dll&quot; &quot;$(ProjectDir)GeneratedEntities.mg.cs&quot;" />
        <ItemGroup>
            <!--- Ensure that the new files are included in the build -->
            <Compile Include="**\*.cs" KeepDuplicates="false" />
        </ItemGroup>
    </Target>
</Project>
