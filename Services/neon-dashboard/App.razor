@inject NavigationManager UriHelper

<CascadingAuthenticationState>
  <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
      <Found Context="routeData">
          <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                   <NotAuthorized>
                    @{
                         var returnUrl = UriHelper.ToBaseRelativePath(UriHelper.Uri);
                         UriHelper.NavigateTo($"login?redirectUri=/{returnUrl}", forceLoad: true);
                     }
                 </NotAuthorized>
                   <Authorizing>
                       <main class="w-screen h-screen place-items-center">
                        <p class="text-5">Loading... </p>

                      </main>
                   </Authorizing>
               </AuthorizeRouteView>
      </Found>
      <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
              <main class="w-screen h-screen place-items-center">
                <p class="text-7">Page not found! </p>

              </main>
          </LayoutView>
      </NotFound>
  </Router>
  <NavigationTracker />
</CascadingAuthenticationState> 